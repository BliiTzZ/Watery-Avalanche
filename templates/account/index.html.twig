{% extends 'base.html.twig' %}

{% block title %}
  Account index
{% endblock %}

{% block body %}
  <h1>
    Account index
  </h1>

  <table class="table">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Balance
        </th>
        <th>
          Iban
        </th>
        <th>
          Account_state
        </th>
        <th>
          actions
        </th>
      </tr>
    </thead>
    <tbody>
      {% for account in accounts %}
        <tr>
          <td>
            {{ account.id }}
          </td>
          <td>
            {{ account.balance }}
          </td>
          <td>
            {{ account.iban }}
          </td>
          <td>
            {{ account.accountState ? 'Yes' : 'No' }}
          </td>
          <td>
            <a href="{{
              path(
                'app_account_show',
                {
                  id: account.id
                }
              )
              }}">
              show
            </a>
            <a href="{{
              path(
                'app_account_edit',
                {
                  id: account.id
                }
              )
              }}">
              edit
            </a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">
            no records found
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
